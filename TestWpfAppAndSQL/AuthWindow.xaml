<Window x:Class="TestWpfAppAndSQL.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWpfAppAndSQL"
        mc:Ignorable="d"
        Title="AuthWindow" Height="400" Width="300">
    <Grid>
        <Button x:Name="ButtonLogin" Content="Sign In" HorizontalAlignment="Left" Margin="87,227,0,0" VerticalAlignment="Top" Width="120" Height="24" Click="ButtonLogin_Click"/>
        <TextBox x:Name="PassBox" HorizontalAlignment="Left" Height="23" Margin="87,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="LoginBox" HorizontalAlignment="Left" Height="23" Margin="87,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="LoginLabel" Content="Login:" HorizontalAlignment="Left" Margin="87,74,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="PassLabel" Content="Password:" HorizontalAlignment="Left" Margin="87,141,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
